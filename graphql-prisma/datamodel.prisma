type User {
  id: ID! @id
  name: String!
  email: String! @unique
  posts: [Post!]!
}

type Post {
      id: ID! @id
      title: String!
      body: String!
      author: User!
      published: Boolean!
}

 type Comment {
      id: ID! @id
      text: String!
      author: User!
      post: Post!
}